<% notes.each_with_index do |note, i| %>

<div class="row">
  <div class="card blue-grey file-card col m8 offset-m2">
    <div class="card-content white-text">
      <h3 class="card-title">Note <%= i + 1 %></h3>
        <div>
          <div>Name: <%= note.note_with_type %></div>
          <div>Author: <%= note.user_id %></div>
          <div>Category: <%= note.category.name %></div>
          <div>Body: <%= note.body %></div>
        </div>
    </div>
  </div>
</div>

  <% if authorized?(note) %>
    <h3>
      Note <%= i + 1 %>
    </h3>
    <div>Name: <%= note.note_with_type %></div>
    <div>Author: <%= link_to note.user.name, note.user %></div>
    <div>Category: <%= link_to note.category.name, note.category %></div>
    <div>Body: <%= note.body %></div>
  <% else %>
    <span></span>
  <% end %>

<% end %>
