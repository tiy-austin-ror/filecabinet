<div><h3><%= form_title %></h3></div>

<div>
  <%= form_for(tag) do |f| %>
    <div class="field">
      <label for="name">Name: </label>
      <%= f.text_area :name, placeholder: "Nametag", class: 'form-field' %>
    </div>

    <div class="field">
      <%= f.submit %>
    </div>
  <% end %>
</div>
